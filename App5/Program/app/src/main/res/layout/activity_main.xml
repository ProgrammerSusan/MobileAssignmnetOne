<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    tools:context=".MainActivity">

<!--    Starts out black, colors change as user inputs color values-->
    <TextView
        android:id="@+id/color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="#000"/>


    <EditText
        android:id="@+id/red"
        android:layout_width="@dimen/rgbDimen"
        android:layout_height="@dimen/rgbDimen"
        android:layout_below="@id/color"
        android:layout_toLeftOf="@id/green"
        android:layout_margin="@dimen/rgbPad"
        android:background="#FF0000"
        android:text="0"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/green"
        android:layout_width="@dimen/rgbDimen"
        android:layout_height="@dimen/rgbDimen"
        android:layout_below="@id/color"
        android:layout_margin="@dimen/rgbPad"
        android:layout_centerHorizontal="true"
        android:background="#00FF00"
        android:text="0"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/blue"
        android:layout_width="@dimen/rgbDimen"
        android:layout_height="@dimen/rgbDimen"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/color"
        android:layout_toRightOf="@id/green"
        android:layout_margin="@dimen/rgbPad"
        android:background="#0000FF"
        android:text="0"
        android:textAlignment="center" />

</RelativeLayout>